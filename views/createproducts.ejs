<%- include('./partials/header') %>

<!-- Flash Messages -->
<div class="fixed top-5 left-1/2 transform -translate-x-1/2 z-50">
    <% if (messages.error && messages.error.length > 0) { %>
        <div id="flash-error" class="bg-red-500 text-white rounded-md px-5 py-3 mb-4 shadow-lg">
            <% messages.error.forEach(function(msg){ %>
                <span><%= msg %></span><br />
            <% }) %>
        </div>
    <% } %>

    <% if (messages.success && messages.success.length > 0) { %>
        <div id="flash-success" class="bg-green-500 text-white rounded-md px-5 py-3 mb-4 shadow-lg text-center">
            <% messages.success.forEach(function(msg){ %>
                <span><%= msg %></span><br />
            <% }) %>
        </div>
    <% } %>
</div>

<div class="min-h-screen flex flex-col bg-gray-100 mt-10">
    <div class="container mx-auto px-8 py-16 flex">
        <!-- Sidebar -->
        <aside class="w-1/4 bg-white shadow-lg rounded-md p-6 mr-8">
            <h3 class="text-lg font-semibold mb-4">Dashboard</h3>
            <nav class="flex flex-col gap-3">
                <a class="text-gray-700 hover:text-blue-500" href="#">All Products</a>
                <a class="text-gray-700 hover:text-blue-500" href="#">Create New Product</a>
            </nav>
        </aside>

        <!-- Main Form -->
        <main class="w-3/4 bg-white shadow-lg rounded-md p-8">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <!-- Product Image -->
                <div class="mb-8">
                    <label class="block text-lg font-semibold text-gray-700 mb-2">Product Image</label>
                    <input name="image" type="file" class="border border-gray-300 p-3 rounded-md w-full" />
                </div>

                <!-- Product Details -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold text-gray-800 mb-4">Product Details</h3>
                    <div class="grid grid-cols-2 gap-6">
                        <input name="name" type="text" placeholder="Product Name" class="border border-gray-300 p-3 rounded-md w-full" />
                        <input name="price" type="text" placeholder="Product Price" class="border border-gray-300 p-3 rounded-md w-full" />
                        <input name="discount" type="text" placeholder="Discount Price" class="border border-gray-300 p-3 rounded-md w-full" />
                    </div>
                </div>

                <!-- Panel Details -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold text-gray-800 mb-4">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-6">
                        <input name="bgcolor" type="text" placeholder="Background Color" class="border border-gray-300 p-3 rounded-md w-full" />
                        <input name="panelcolor" type="text" placeholder="Panel Color" class="border border-gray-300 p-3 rounded-md w-full" />
                        <input name="textcolor" type="text" placeholder="Text Color" class="border border-gray-300 p-3 rounded-md w-full" />
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="w-full bg-blue-500 text-white py-3 rounded-md font-semibold hover:bg-blue-600 transition">
                    Create New Product
                </button>
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
